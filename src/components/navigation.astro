---
const navItems = [
  {
    label: 'Directorio',
    to: '/directorio',
  },
];
---

<nav class='prose max-w-[65ch] mx-auto px-4 md:px-0 my-10'>
  <h3
    id='navegación'
    class='mb-4'
  >
    Navegación
  </h3>
  <ul class='list-none p-0 flex gap-4'>
    {
      navItems.map((navItem) => (
        <li class='p-0'>
          <a href={navItem.to}>{navItem.label}</a>
        </li>
      ))
    }
  </ul>
</nav>
